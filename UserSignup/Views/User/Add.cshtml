@{

    <h1>New User Signup</h1>
    <h2>@ViewBag.message</h2>
    <form method="post">
        <br /><p>New user:</p>
        <input name="username" type="text" value=@ViewBag.name />
        <p>Email address:</p>
        <input name="email" type="text" value=@ViewBag.email />
        <br /><p>New password:</p>
        <input name="password" type="password" />
        <br /><p>Verify new password:</p>
        <input name="verify" type="password" />

        <br><input type="submit" value="Create Account" />

    </form>
}
